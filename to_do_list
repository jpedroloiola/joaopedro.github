# to_do_list.py

def mostrar_tarefas(tarefas):
    if not tarefas:
        print("\nNenhuma tarefa adicionada ainda.")
    else:
        print("\nğŸ“‹ Suas tarefas:")
        for i, tarefa in enumerate(tarefas, 1):
            status = "âœ…" if tarefa['feito'] else "âŒ"
            print(f"{i}. {tarefa['titulo']} [{status}]")

def adicionar_tarefa(tarefas):
    titulo = input("\nDigite o tÃ­tulo da tarefa: ")
    tarefas.append({"titulo": titulo, "feito": False})
    print(f"Tarefa '{titulo}' adicionada!")

def marcar_concluida(tarefas):
    mostrar_tarefas(tarefas)
    try:
        indice = int(input("\nDigite o nÃºmero da tarefa concluÃ­da: ")) - 1
        if 0 <= indice < len(tarefas):
            tarefas[indice]['feito'] = True
            print(f"Tarefa '{tarefas[indice]['titulo']}' marcada como concluÃ­da!")
        else:
            print("NÃºmero invÃ¡lido.")
    except ValueError:
        print("Por favor, digite um nÃºmero vÃ¡lido.")

def remover_tarefa(tarefas):
    mostrar_tarefas(tarefas)
    try:
        indice = int(input("\nDigite o nÃºmero da tarefa a remover: ")) - 1
        if 0 <= indice < len(tarefas):
            removida = tarefas.pop(indice)
            print(f"Tarefa '{removida['titulo']}' removida!")
        else:
            print("NÃºmero invÃ¡lido.")
    except ValueError:
        print("Por favor, digite um nÃºmero vÃ¡lido.")

def menu():
    tarefas = []
    while True:
        print("\n=== To-do List ===")
        print("1. Mostrar tarefas")
        print("2. Adicionar tarefa")
        print("3. Marcar tarefa como concluÃ­da")
        print("4. Remover tarefa")
        print("5. Sair")

        opcao = input("Escolha uma opÃ§Ã£o: ")

        if opcao == "1":
            mostrar_tarefas(tarefas)
        elif opcao == "2":
            adicionar_tarefa(tarefas)
        elif opcao == "3":
            marcar_concluida(tarefas)
        elif opcao == "4":
            remover_tarefa(tarefas)
        elif opcao == "5":
            print("Saindo... atÃ© logo!")
            break
        else:
            print("OpÃ§Ã£o invÃ¡lida, tente novamente.")

if __name__ == "__main__":
    menu()
